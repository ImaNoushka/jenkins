pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                sh 'echo lol' 
            }
        }
        stage('Test') { 
            steps {
                sh 'ls'
            }
        }
        stage('Post Build'){
            steps{
                archiveArtifacts artifacts: '*/*.war', followSymlinks: false
            }
        }
        stage('Deploy') { 
            steps {
                deploy adapters: [tomcat9(credentialsId: '638ffdcd-7604-4ce0-9044-716bd07a47d5', path: '', url: 'http://localhost:8081/')], contextPath: '/spark', war: 'target/*.war' 
            }
        }
    }
}